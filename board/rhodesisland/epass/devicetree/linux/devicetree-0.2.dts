&i2c0 {
	pinctrl-names = "default";
	pinctrl-0 = <&i2c0_pd_pins>;
	status = "okay";

	lsm6ds3:lsm6ds3@6a {
		compatible = "st,lsm6ds3";
		reg = <0x6a>;
		interrupt-parent = <&pio>;
		interrupts = <4 11 IRQ_TYPE_EDGE_FALLING>;/*(PE11)*/
	};
};

